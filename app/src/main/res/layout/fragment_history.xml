<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#c4d4d6"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/previous"

                    android:text="1 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#549429"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/current"

                    android:text="2 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#549429"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/following"

                    android:text="3 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#549429"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dadadc"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:text="Tổng quan"
                        android:layout_height="30dp"
                        android:textSize="25sp"/>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1f1a14"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Tiền ra"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Tiền vào"
                        android:textSize="22sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/money_out"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="1.000.000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/money_in"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="2.000.000"
                        android:textSize="22sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#3f3832"/>

                    <TextView
                        android:id="@+id/money_remain"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="1.000.000 "
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/itemthesameday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@drawable/ic_account_circle_black_24dp">

            </ListView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>