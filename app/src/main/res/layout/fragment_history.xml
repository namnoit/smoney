<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_history">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#b8c1b6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/previous"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_left_24dp"
                    android:background="#355572"/>
               <!-- <Button
                    android:id="@+id/previous"

                    android:text="1 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#6cc952"
                    />-->
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">


                <Button
                    android:id="@+id/current"

                    android:text="2 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#355572"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/following"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_right_24dp"
                    android:background="#355572"/>
                <!--<Button
                    android:id="@+id/following"

                    android:text="3 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"

                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="#6cc952"
                    />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ffffff"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:text="Tổng quan"
                        android:layout_height="30dp"
                        android:textSize="25sp"/>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1f1a14"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Tiền ra"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Tiền vào"
                        android:textSize="22sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/money_out"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="1.000.000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/money_in"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="2.000.000"
                        android:textSize="22sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#3f3832"/>

                    <TextView
                        android:id="@+id/money_remain"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="1.000.000 "
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/containerItem">

            <ListView
                android:id="@+id/itemthesameday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@drawable/ic_account_circle_black_24dp">

            </ListView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>